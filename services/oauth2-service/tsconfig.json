{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["DOM", "ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "@resources/*": ["./resources/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": false,
    "strict": true,
    "target": "ES2015"
  },
  "exclude": ["**/node_modules"],
  "include": ["src", "resources"]
}
